<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <android.support.v4.view.ViewPager
                android:id="@+id/photo_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/photo_bottom"
                android:layout_alignParentTop="true"
        		>
    </android.support.v4.view.ViewPager>
    <LinearLayout android:id="@id/photo_bottom"
        		  android:layout_width="match_parent"
        		  android:layout_height="wrap_content"
        		  android:layout_alignParentBottom="true"
        		  android:background="#999999"
        		  android:orientation="horizontal">
        		  <ImageButton android:id="@+id/alter_button"
        		      	       android:layout_weight="1"
        		      	       android:layout_width="0dp"
        		      	       android:layout_height="wrap_content"/>
        		  <TextView android:id="@+id/page_textview"
        		            android:layout_weight="1"
        		            android:layout_width="0dp"
        		            android:layout_height="wrap_content"
        		            android:layout_gravity="center_vertical|center_horizontal"
        		            android:gravity="center"
        		            android:textColor="#ffffff"
        		            android:textSize="18sp"/>
        		  <ImageButton android:id="@+id/share_button"
        		      	       android:layout_weight="1"
        		      	       android:layout_width="0dp"
        		      	       android:layout_height="wrap_content"/>
        
    </LinearLayout>
</RelativeLayout>
